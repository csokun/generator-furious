{
  "name": "generator-furious",
  "version": "0.0.1",
  "description": "Furious a Fastify boilerplate",
  "homepage": "https://github.com/csokun/generator-furious.git",
  "author": {
    "name": "Sokun Chorn",
    "email": "chornsokun@gmail.com",
    "url": "https://twitter.com/csokun"
  },
  "files": [
    "generators"
  ],
  "main": "generators/app/index.js",
  "keywords": [
    "yeoman-generator",
    "fastify",
    "furious"
  ],
  "devDependencies": {
    "yeoman-test": "^2.0.0",
    "yeoman-assert": "^3.1.1",
    "eslint": "^5.16.0",
    "prettier": "^1.17.1",
    "husky": "^2.3.0",
    "lint-staged": "^8.1.7",
    "eslint-config-prettier": "^4.3.0",
    "eslint-plugin-prettier": "^3.1.0",
    "eslint-config-xo": "^0.26.0",
    "jest": "^24.8.0",
    "rimraf": "^2.6.3"
  },
  "engines": {
    "npm": ">= 10.0.0"
  },
  "dependencies": {
    "yeoman-generator": "^4.0.1",
    "chalk": "^2.4.2",
    "yosay": "^2.0.2"
  },
  "jest": {
    "testEnvironment": "node"
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "git add"
    ],
    "*.json": [
      "prettier --write",
      "git add"
    ]
  },
  "eslintConfig": {
    "extends": [
      "xo",
      "prettier"
    ],
    "env": {
      "jest": true,
      "node": true
    },
    "rules": {
      "prettier/prettier": "error"
    },
    "plugins": [
      "prettier"
    ]
  },
  "scripts": {
    "prepublish": "rimraf generators/app/templates/src/node_modules",
    "pretest": "eslint .",
    "test": "jest __tests__"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/csokun/generator-furious.git"
  },
  "license": "MIT"
}
